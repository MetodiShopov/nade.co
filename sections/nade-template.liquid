{% schema %}
    {
        "name": "Nade Section",
        "tag": "div",
        "settings": [
            {
                "type": "image_picker",
                "id": "right_background_image",
                "label": "Right background image"
            },
            {
                "id": "btn_shop_now",
                "type": "url",
                "label": "Shop Now Button link"
            },
            {
                "type": "textarea",
                "id": "product_headline",
                "label": "Product Headline",
                "info": "Headline",
                "placeholder": "Some text"
            },
            {
                "type": "textarea",
                "id": "product_body",
                "label": "Product Body",
                "info": "Body text",
                "placeholder": "Some text"
            },
            {
                "type": "text",
                "id": "product_callout",
                "label": "Product Callout",
                "info": "Callout",
                "placeholder": "Some text"
            },
            {
                "id": "ingredients_btn",
                "type": "url",
                "label": "Link for all Ingredients buttons" 
            }
        ],
        "presets": [
            {
                "category": "Custom Content",
                "name":"Nade Section"
            }
        ]
    }
{% endschema %}

{% style %}
    #nade_main_page {
        display: flex;
        justify-content: center;
        flex-wrap: nowrap;
    }
    #product_details {
        width: 37%;
        background-repeat: no-repeat;
        background-size: contain;
        z-index: 2;
        margin-top: 7%;
        padding: 0 4% 0 4%;
    }
    .product_details_top_wrapper {
        display: flex;
    }
    .product_details_bottom_wrapper {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        margin-top: -7%;
    }
    .product_bottle_section{
        width: 50%;
    }
    .bottle {
        margin-top: -68%;
        margin-left: -90%;
        max-width: 280%
    }
    .product_text_section {
        width: 50%;
        color: white;
    }
    #background_image {
        width: 65%;
        z-index: 1;
        margin-left: -10%;
    }
    .product_text_section > h3 {
        color: white !important;
        margin-top: 29%;
        font-size: 3.3rem;
        line-height: 1.1;
    }
    .product_text_section p {
        line-height: 1.3;
    }
    .product_text_section > hr {
        border: solid 1px white;
        margin: 6% 0 6% 0;
    }
    .product_text_section > img {
        margin: -27% 0 0 -20%;
        max-width: 73%;
    }
    #product_details_mobile {
        display: none;
    }
    .shop_now {
        width: 50%;
        text-align: center;
    }
    .shop_now > a > img {
        max-width: 70%;
    }
    .hover_btns{
        display: flex;
        justify-content: space-between;
        width: 50%;
    }
    .product_callout {
        font-weight: bold;
    }
    .icon_hidden {
        display: none;
        max-height: 55px
    }
    .icon_shown{
        max-height: 55px
    }
    .reveal:hover .icon_hidden { 
        display: block;    
    }
    .reveal:hover .icon_shown{
        display: none;
    }
    @media screen and (min-width: 1366px) and (max-width: 1680px){
        #product_details {
            padding: 0 3% 0 3%;
        }
        .product_details_bottom_wrapper {
            margin-top: -9%;
        }
        .product_text_section > h3 {
            margin-bottom: 3%;
            font-size: 2.7rem;
        }
        .product_text_section p {
            margin-bottom: 3%;
            font-size: 1.2rem;
        }
        .shop_now > a > img {
            max-width: 73%;
        }
        .icon_shown, .icon_hidden {
            max-height: 45px;
        }
    }
    @media screen and (min-width: 1024px) and (max-width: 1365px){
        .product_text_section > h3 {
            margin-top: 18%;
            margin-bottom: 3%;
            font-size: 2rem;
        }
        .product_text_section p {
            font-size: 0.8rem;
            margin-bottom: 3%;
        }
        .icon_shown, .icon_hidden {
            max-height: 30px;
        }
    }
    @media screen and (min-width: 768px) and (max-width: 1023px) {
        .product_text_section > h3 {
            font-size: 1.7rem;
            margin-top: 25%;
            margin-bottom: 5%;
        }
        .product_text_section p {
            font-size: 0.8rem;
            margin-bottom: 5%;
        }
    }
    @media screen and (max-width: 767px) {
        #product_details{
            display: none;
        }
        #product_details_mobile {
            display: block;
            width: auto;
            margin-top: 20%;
            background-image: none !important;
        }
        #product_details_mobile h3 {
            line-height: normal;
            font-weight: bold;
            font-size: 2.1rem;
            margin: 18% 0 16% 0;
        } 
        #product_details_mobile p {
            color: white;
        }
        #background_image {
            display: none;
        }
        .product_details_top_wrapper {
            display: flex;
            background-color: {{ settings.color_primary }};
            margin-bottom: 13%;
        }
        .bottle {
            margin-left: -77%;
            margin-top: -50%;
            max-width: 254%;
        }
        .product_text_section {
            padding-right: 4%;
        }
        .product_text_section > img {
            margin: -29% 0 0 -10%;
            max-width: 83%;
        }
        .product_text_section > hr {
            border: solid 1px white;
            margin: 0 0 22% 0;
        }
        .product_details_bottom_wrapper {
            display: block;
            background-color: {{ settings.color_primary }};
            padding: 5%;
        }
        .product_details_bottom_wrapper p {
            text-align: center;
        }
        .hover_btns {
            width: auto;
        }
        .icon_shown, .icon_hidden {
            max-height: 100px;
        }
    }
{% endstyle %}