            </div>
        </div>
        <div class="product_details_bottom_wrapper">
            <p>{{ section.settings.product_body }}</p>
            <p class="product_callout">{{ section.settings.product_callout }}</p>
            <div class="hover_btns">
                <div class="reveal">
                    <a href="{{ section.settings.ingredients_btn }}">
                        <img class="icon_shown" src="{{ 'icon_meat.png' | asset_img_url: 'master' }}" alt="Meat">
                        <img class="icon_hidden" src="{{ 'icon_meat_hover.png' | asset_img_url: 'master' }}" alt="Meat">
