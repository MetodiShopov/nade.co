<div id="nade_main_page">
    <div id="product_details" style="background-image: url('{{ 'shape.png' | asset_img_url: 'master'}}');">
        <div class="product_details_top_wrapper">
            <div class="product_bottle_section">
                <img class="bottle" src="{{ 'bottle.png' | asset_img_url: 'master' }}" alt="bottle"/>
            </div>
            <div class="product_text_section">
                <img src="{{ 'createdby_pointer.png' | asset_img_url: 'master' }}" alt="created by pointer"/>
                <h3>{{ section.settings.product_headline }}</h3>
                <hr>
                <p>{{ section.settings.product_body }}</p>
                <p class="product_callout">{{ section.settings.product_callout }}</p>
            </div>
        </div>
        <div class="product_details_bottom_wrapper">
            <div class="shop_now">
                <a href="{{ section.settings.btn_shop_now }}">
                    <img src="{{ 'shopnow_button.png' | asset_img_url: 'master' }}" alt="shop now">
                </a>
            </div>
            <div class="hover_btns">
                <div class="reveal">
